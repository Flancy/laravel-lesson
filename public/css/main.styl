body
    font-family: 'Roboto'

p
    margin: 0
    display: inline-block

.fa-btn
    margin-right: 6px

.dropdown
    .dropdown-avatar
        position: relative
        padding-left: 50px
        .avatar
            position: absolute
            top: 6px
            left: 0px
            width: 38px
            height: 38px
            border: 4px solid #ffffff
            border-radius: 50%
            display: inline-block

.table-tasks
    border-collapse: separate
    border-spacing: 0 10px
    tr
        margin-bottom: 10px !important
        td
            vertical-align: middle !important
            &:first-of-type
                border-top-left-radius: 4px
                border-bottom-left-radius: 4px
            &:last-of-type
                border-top-right-radius: 4px
                border-bottom-right-radius: 4px

.profile
    .avatar
        float: left
        width: 150px
        height: 150px
        border: 4px solid #cccccc
        border-radius: 50%
        margin: 0px 25px 0px
    .form-avatar
        float: left
        label
            margin: 0 0 20px
            font-weight: bold
        #changeAvatar
            vertical-align: super
        input[type=file]
            display: none
        .progress
            display: none
